@{
    ViewData["Title"] = "Login Page";
}
<body>
    <div class="mx-auto">
        <form class="h-96 border border-black border-solid border-1">
            <div class="flex flex-col justify-between items-center mt-8 p-2">
                <h1>Đăng nhập</h1>
                <div class="">
                    <label for="username" id="lbUser">Tên tài khoản</label>
                    <input type="text" id="username" placeholder="Nhập tên tài khoản" required>
                </div>
                <br />
                <div class="">
                    <label for="password" id="lbPass">Mật khẩu</label>
                    <input type="password" id="password" placeholder="Nhập mật khẩu" required>
                </div>
                <div class="">
                    <button type="submit" id="btnLogin">Đăng nhập</button>
                    <div class="dvSignup">
                    </div>
                    <p>Bạn chưa có tài khoản? <a asp-controller="Home" asp-action="Register">Đăng ký</a></p>
                </div>
        </form>
    </div>
</body>

