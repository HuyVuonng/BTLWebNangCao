@{
    ViewData["Title"] = "Register Page";
}
<div>
    <form>
        <h1>Đăng ký</h1>
        <label for="username" id="lbUser">Tên tài khoản</label>
        <input type="text" id="username" placeholder="Nhập tên tài khoản" required>

        <label for="password" id="lbPass1">Mật khẩu</label>
        <input type="password" id="password1" placeholder="Nhập mật khẩu" required>

        <label for="password2" id="lbPass2">Nhập lại mật khẩu</label>
        <input type="password" id="password2" placeholder="Nhập lại mật khẩu ">

        <button type="submit" id="btnSignup">Đăng ký</button>
        <div class="dvSignup">
            <p>Bạn đã có tài khoản? <a asp-controller="Home" asp-action="Login">Đăng nhập</a></p>
        </div>
    </form>
</div>
